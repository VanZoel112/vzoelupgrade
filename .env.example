# VBot Python Configuration
# Copy this file to .env and fill in your values

# Telegram API Configuration (Required)
# Get from https://my.telegram.org
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Authorization (Required)
# Your Telegram user ID (owner)
OWNER_ID=your_user_id_here
# Developer IDs (comma-separated)
DEVELOPER_IDS=your_dev_id1,your_dev_id2
# Admin chat IDs where bot can be used (comma-separated)
ADMIN_CHAT_IDS=chat_id1,chat_id2

# Session Configuration
SESSION_NAME=vbot_session

# Music System Configuration
DOWNLOAD_PATH=downloads/
MAX_FILE_SIZE=52428800
AUDIO_QUALITY=best[height<=480]
ENABLE_YTDLP=true

# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_token
GITHUB_REPOSITORY=your_username/repository_name
GITHUB_BRANCH=main
GITHUB_AUTO_COMMIT=true

# Feature Toggles
ENABLE_MUSIC=true
ENABLE_LOCK_SYSTEM=true
ENABLE_PREMIUM_EMOJI=true
ENABLE_TAG_SYSTEM=true
ENABLE_WELCOME_SYSTEM=true
ENABLE_GITHUB_SYNC=true
ENABLE_PRIVACY_SYSTEM=true
ENABLE_PUBLIC_COMMANDS=true

# Rate Limiting
TAG_DELAY=2.0
MUSIC_COOLDOWN=5